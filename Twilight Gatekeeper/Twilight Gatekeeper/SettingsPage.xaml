<Page x:Class="Twilight_Gatekeeper.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage">
    <Grid>
        <Label Content="New Password:" Margin="10,10,0,0" VerticalAlignment="Top" />
        <PasswordBox Name="NewPasswordBox" Margin="100,10,10,0" VerticalAlignment="Top" />
